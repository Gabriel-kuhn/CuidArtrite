<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Objetivo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Objetivo: Reduzir dor e manter movimento"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- A) Medicamentos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A) MEDICAMENTOS:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Analgésicos"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Anti-inflamatórios (com orientação médica)"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Pomadas e géis"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Suplementos"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- B) Práticas Integrativas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B) PRÁTICAS INTEGRATIVAS (PICs): ✨ Este app foca nestas práticas!"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Exercícios adaptados"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Termoterapia"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Acupuntura / Acupressão"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Yoga e Tai Chi"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Massagem terapêutica"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Fitoterapia"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- C) Fisioterapia -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C) FISIOTERAPIA:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Fortalecimento muscular"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Melhora da mobilidade"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Técnicas de proteção articular"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- D) Mudanças no estilo de vida -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D) MUDANÇAS NO ESTILO DE VIDA:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Perda de peso (se necessário)"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Alimentação anti-inflamatória"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Exercícios regulares"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Adaptações no dia a dia"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- E) Tratamentos avançados -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E) TRATAMENTOS AVANÇADOS:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Infiltrações (injeções)"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Viscossuplementação"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Cirurgia (casos específicos)"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Abordagem integrada -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABORDAGEM INTEGRADA: O melhor resultado vem da COMBINAÇÃO de tratamentos, não apenas um!"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

</LinearLayout>
