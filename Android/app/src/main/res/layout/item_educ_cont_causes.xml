<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Subtítulo: Causas principais -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Causas principais:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <!-- Lista de causas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Idade: desgaste natural ao longo da vida"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Uso repetitivo: trabalhos que sobrecarregam"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Lesões anteriores: fraturas, torções"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Sobrepeso: pressão extra nas articulações"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Genética: pode ser de família"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Postura inadequada"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Subtítulo: Fatores que você pode controlar -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FATORES QUE VOCÊ PODE CONTROLAR:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="4dp" />

    <!-- Lista de fatores controláveis -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Peso corporal"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Atividade física regular"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Postura no dia a dia"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Proteção das articulações"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Alimentação saudável"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>
