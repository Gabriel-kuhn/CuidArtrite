<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Subtítulo: Sintomas principais -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sintomas principais:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <!-- Lista de sintomas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Dor nas articulações (piora com movimento)"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Rigidez pela manhã (melhora em 30 min)"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Inchaço leve nas juntas"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Estalos ao movimentar"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Dificuldade para realizar tarefas simples"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Sensação de 'travamento'"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Subtítulo: Padrão comum -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Padrão comum:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <!-- Lista de horários do dia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Manhã: mais rígido"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Tarde: melhora com movimento suave"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Noite: pode doer após atividades"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Observação sobre dor -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A dor varia: alguns dias melhor, outros pior — é normal!"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Subtítulo: Quando procurar ajuda urgente -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUANDO PROCURAR AJUDA URGENTE:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="4dp" />

    <!-- Lista de sinais de alerta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Dor muito forte e súbita"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Inchaço grande e vermelhidão"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Febre junto com dor"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Impossibilidade de mover a articulação"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>
