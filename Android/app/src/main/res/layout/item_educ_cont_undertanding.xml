<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O que acontece?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Parágrafos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:text="A osteoartrite (ou artrose) é o desgaste natural da cartilagem que protege suas articulações."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:text="Com o tempo, os ossos ficam mais próximos e causam dor e rigidez."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:text="Pense assim: é como o desgaste de um pneu de carro — com o uso ao longo dos anos, a proteção vai diminuindo."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginBottom="16dp" />

    <!-- Seção destacada -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ IMPORTANTE SABER:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp" />

    <!-- Lista com marcadores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• É muito comum após os 60 anos"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• NÃO é culpa sua"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Tem tratamento e controle"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Você pode viver bem com osteoartrite"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Lista de articulações afetadas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Articulações mais afetadas:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Joelhos"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Mãos e dedos"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Quadril"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Coluna"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Pés"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>
