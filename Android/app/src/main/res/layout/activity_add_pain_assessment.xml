<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".view.AddPainAssessmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Registrar Nível de Dor"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Label de seleção de articulação -->
        <TextView
            android:id="@+id/jointLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione uma articulação"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <!-- MAPA CORPORAL COM PONTOS CLICÁVEIS -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/bodyImage"
                android:src="@drawable/body_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Mapa corporal"/>

            <!-- Ombros -->
            <ImageView
                android:id="@+id/jointShoulderLeft"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="147dp"
                android:layout_marginTop="75dp"
                android:layout_gravity="top|start"
                android:tag="Ombro Esquerdo"
                android:contentDescription="Ombro esquerdo"/>

            <ImageView
                android:id="@+id/jointShoulderRight"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="210dp"
                android:layout_marginTop="75dp"
                android:layout_gravity="top|start"
                android:tag="Ombro Direito"
                android:contentDescription="Ombro direito"/>

            <!-- Cotovelos -->
            <ImageView
                android:id="@+id/jointElbowLeft"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="105dp"
                android:layout_marginTop="75dp"
                android:layout_gravity="top|start"
                android:tag="Cotovelo Esquerdo"
                android:contentDescription="Cotovelo esquerdo"/>

            <!-- Pulsos -->

            <ImageView
                android:id="@+id/jointElbowRight"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="258dp"
                android:layout_marginTop="75dp"
                android:contentDescription="Cotovelo direito"
                android:src="@drawable/joint_dot"
                android:tag="Cotovelo Direito" />

            <ImageView
                android:id="@+id/jointWristLeft"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="60dp"
                android:layout_marginTop="75dp"
                android:layout_gravity="top|start"
                android:tag="Pulso Esquerdo"
                android:contentDescription="Pulso esquerdo"/>

            <!-- Quadris -->
            <ImageView
                android:id="@+id/jointWristRight"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="300dp"
                android:layout_marginTop="75dp"
                android:contentDescription="Pulso direito"
                android:src="@drawable/joint_dot"
                android:tag="Pulso Direito" />

            <ImageView
                android:id="@+id/jointHipLeft"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="160dp"
                android:layout_marginTop="170dp"
                android:layout_gravity="top|start"
                android:tag="Quadril Esquerdo"
                android:contentDescription="Quadril esquerdo"/>

            <ImageView
                android:id="@+id/jointHipRight"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="203dp"
                android:layout_marginTop="170dp"
                android:layout_gravity="top|start"
                android:tag="Quadril Direito"
                android:contentDescription="Quadril direito"/>

            <!-- Joelhos -->
            <ImageView
                android:id="@+id/jointKneeLeft"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="160dp"
                android:layout_marginTop="245dp"
                android:contentDescription="Joelho esquerdo"
                android:src="@drawable/joint_dot"
                android:tag="Joelho Esquerdo" />

            <ImageView
                android:id="@+id/jointKneeRight"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="200dp"
                android:layout_marginTop="245dp"
                android:layout_gravity="top|start"
                android:tag="Joelho Direito"
                android:contentDescription="Joelho direito"/>

            <!-- Tornozelos -->
            <ImageView
                android:id="@+id/jointAnkleLeft"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="160dp"
                android:layout_marginTop="305dp"
                android:layout_gravity="top|start"
                android:tag="Tornozelo Esquerdo"
                android:contentDescription="Tornozelo esquerdo"/>

            <ImageView
                android:id="@+id/jointAnkleRight"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/joint_dot"
                android:layout_marginStart="205dp"
                android:layout_marginTop="305dp"
                android:layout_gravity="top|start"
                android:tag="Tornozelo Direito"
                android:contentDescription="Tornozelo direito"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nível da dor (0 a 10)"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Slider do nível de dor -->
        <com.google.android.material.slider.Slider
            android:id="@+id/sliderNivelDor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:stepSize="1"
            android:valueFrom="0"
            android:valueTo="10"
            app:labelBehavior="gone" />

        <!-- Exibição do valor atual -->
        <TextView
            android:id="@+id/tvValorDor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nível atual: 0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descrição do nível de dor -->
        <TextView
            android:id="@+id/tvDescricaoDor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Sem dor."
            android:textAlignment="center"
            android:textSize="14sp" />

        <!-- Campo de comentário opcional -->
        <EditText
            android:id="@+id/commentField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentário opcional"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_marginBottom="16dp"/>

        <!-- Botão de registro -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrarDor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Registrar Dor" />

    </LinearLayout>
</ScrollView>
