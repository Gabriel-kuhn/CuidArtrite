                    android:text="ENTENDENDO SUA CONDIÇÃO"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/arrow_drop_down" />

                <!-- Conteúdo -->
